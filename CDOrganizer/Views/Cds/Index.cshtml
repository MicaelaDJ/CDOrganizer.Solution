@using CdOrganizer.Models;
<h1>CD Organizer</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no CDs in your CD organizer!</p>
}
@if(Model.Count != 0)
{
  @foreach (Cd oneCd in Model)
  {
    <li><a href='/cds/@oneCd.GetId()'>@oneCd.GetTitle()</a></li>
  }
}

</ul>
<a href="/cds/new">Add a new CD.</a>

<form action="/cds/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>
